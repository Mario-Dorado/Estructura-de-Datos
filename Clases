import os

print("\nCrear un archivo")
print("==================")

ArchivoGustos='gustos.txt'

archivo=open(ArchivoGustos, 'w')
archivo.write('Camila \t\tLugares con mucha concurrencia, Bares, Antros y Eventos\n')
archivo.write('Daniela\t\tLugares con mucha concurrencia, Parques y Centros Recreativo\n')
archivo.write('Diego  \t\tLugares con poca concurrencia, Eventos poco conocidos\n')
archivo.write('Mario  \t\tLugares con poca concurrencia, Prefiere quedarse en casa\n')
archivo.close()

print("\n\nLeer un archivo")
print("==================\n")

archivo=open(ArchivoGustos, 'r')
contenido=archivo.read()
print(contenido)
archivo.close()
